<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hulatechnologies.notheftautoapp.Status">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Car name"
        android:ems="10"
        android:id="@+id/txtCarName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="203dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Rpi Id"
        android:ems="10"
        android:id="@+id/txtRpiId"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txtCarName"
        android:layout_alignStart="@+id/txtCarName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Car"
        android:id="@+id/btnAddingCar"
        android:layout_below="@+id/txtRpiId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />
</RelativeLayout>
